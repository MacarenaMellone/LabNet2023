@model Practica3.EF.Logic.DTOs.CategoriesDto
@{
    ViewBag.Title = "Categories";
}

<h1>Modificar Categoria</h1>
<br/>
@using (Html.BeginForm("EditView", "Categories", FormMethod.Post))
{
    @Html.HiddenFor(c => c.CategoryID)

    <label for="CategoryName">Nombre Categoria:</label> @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control", @required = "required" })
    <br/>
    <label>Descripcion Categoria:</label> @Html.TextBoxFor(c => c.Description, new { @class = "form-control" })
    <br/>
    <br/>
    <input type="submit" class="btn btn-success" value="Guardar" onclick="return confirm('Esta seguro que quiere guardar los cambios?')"/>
}
<br>
<br/>
<div>
    @Html.ActionLink("Volver", "Index", "Categories")
</div>
