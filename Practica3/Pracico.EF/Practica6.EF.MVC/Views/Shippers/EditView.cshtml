@model Practica3.EF.Logic.DTOs.ShippersDto
@{
    ViewBag.Title = "Shippers";
}
<br />
<br />
<h1>Modificar Shipper</h1>
<hr />
<br />
@using (Html.BeginForm("EditView", "Shippers", FormMethod.Post))
{
    @Html.HiddenFor(s => s.ShipperID)

    <label for="CompanyName">Nombre Compañía:</label> @Html.TextBoxFor(s => s.CompanyName, new { @class = "form-control", @required = "required", @maxlength = "15", autocomplete = "off" })
    <br />
    <label>Teléfono:</label> @Html.TextBoxFor(s => s.Phone, new { @class = "form-control", @maxlength = "150", autocomplete = "off" })
    <br />
    <br />
    <input type="submit" class="btn btn-success" value="Guardar" onclick="return confirm('¿Está seguro que quiere guardar los cambios?')"/>
}
<br>
<br />
<div>
    @Html.ActionLink("Volver", "Index", "Shippers")
</div>

