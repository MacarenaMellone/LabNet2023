@model Practica3.EF.Logic.DTOs.CategoriesDto
@{
    ViewBag.Title = "Categories";
}

<h1>Agregar Categoria</h1>
<br/>
@using (Html.BeginForm("AddCategoriesView", "Categories", FormMethod.Post))
{
    
    <label>Nombre Categoria:</label> @Html.TextBoxFor(c => c.CategoryName, new { @required = "required" })
    <br/>
    <label>Descripcion Categoria:</label> @Html.TextBoxFor(c => c.Description)
    <br/>
    <br/>
    <input type="submit" class="btn btn-success" value="Guardar" onclick = "return confirm('Esta seguro que quiere guardar?')"/>
    
}
<br/>
<br/>
<div>
    @Html.ActionLink("Volver", "Index", "Categories")
</div>

